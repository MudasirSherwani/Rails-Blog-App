<section>
  <%= render "shared/user", user: @user %>
  <div class="bio-area">
    <p>Bio</p>
    <p><%= @user.bio %></p>
  </div>
  <div class="posts">
    <% @recent_posts.each do |post| %>
      <%= render "shared/post", post: post %>
    <% end %>
  </div>
  <button type="button" class="buton"><%= link_to "See all posts", user_posts_path(@user)  %></button>
 <button type="button" class="buton"><%= link_to "Create Post", new_user_post_path(@user) %></button>
</section>
